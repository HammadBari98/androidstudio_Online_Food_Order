<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        tools:context=".HomePage">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAE7DF"
            android:elevation="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/back_btn"
                android:layout_marginTop="5dp"
                android:background="#0000ffff"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                ></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="28sp"
                android:textColor="#3E3205"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:layout_marginTop="16dp">

            </TextView>


        </LinearLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginTop="-28dp"
    android:src="@drawable/category_bg"></ImageView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:id="@+id/cate_item1"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            android:layout_margin="5dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                      <RelativeLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          >
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Burger"
                              android:layout_margin="22dp"
                              android:textStyle="bold"
                              android:textColor="#292929"
                              android:textSize="28sp"></TextView>

                          <ImageButton
                              android:layout_width="wrap_content"
                              android:layout_height="50dp"
                              android:layout_alignParentRight="true"
                              android:layout_marginStart="20dp"
                              android:layout_marginTop="20dp"

                              android:layout_marginEnd="20dp"
                              android:layout_marginBottom="20dp"
                              android:background="#0000ffff"
                              android:src="@drawable/forward"></ImageButton>
                      </RelativeLayout>

                    </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:id="@+id/cate_item2"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            android:layout_margin="5dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="22dp"
                            android:layout_marginBottom="22dp"
                            android:text="Biryani"
                            android:textColor="#292929"
                            android:textSize="28sp"
                            android:textStyle="bold"></TextView>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"

                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="#0000ffff"
                            android:src="@drawable/forward"></ImageButton>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:id="@+id/cate_item3"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            android:layout_margin="5dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="22dp"
                            android:layout_marginBottom="22dp"
                            android:text="Handi"
                            android:textColor="#292929"
                            android:textSize="28sp"
                            android:textStyle="bold"></TextView>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"

                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="#0000ffff"
                            android:src="@drawable/forward"></ImageButton>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:id="@+id/cate_item4"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            android:layout_margin="5dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="22dp"
                            android:layout_marginBottom="22dp"
                            android:text="Chinese"
                            android:textColor="#292929"
                            android:textSize="28sp"
                            android:textStyle="bold"></TextView>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"

                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="#0000ffff"
                            android:src="@drawable/forward"></ImageButton>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>